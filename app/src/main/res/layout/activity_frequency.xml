<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fréquentation du JRLAB"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="20dp"/>
    <!-- Tableau de fréquentation avec ScrollView pour le défilement -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">
        <TableLayout
            android:id="@+id/tblAttendance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:divider="?android:attr/listDivider"
            android:showDividers="middle"
            android:background="#000000">

            <TableRow
                android:background="#CCCCCC"
                android:padding="1dp">
                <TextView android:text="Jour" android:background="#FFFFFF" android:padding="8dp"
                    android:gravity="center"/>
                <TextView android:text="8h30-10h30" android:textColor="@color/white"
                    android:background="@color/black" android:padding="8dp" android:gravity="center"/>
                <TextView android:text="10h30-12h30" android:textColor="@color/white"
                    android:background="@color/black" android:padding="8dp" android:gravity="center"/>
                <TextView android:text="12h30-14h00" android:textColor="@color/white"
                    android:background="@color/black" android:padding="8dp" android:gravity="center"/>
                <TextView android:text="14h00-16h00" android:textColor="@color/white"
                    android:background="@color/black" android:padding="8dp" android:gravity="center"/>
                <TextView android:text="16h00-18h00" android:textColor="@color/white"
                    android:background="@color/black" android:padding="8dp" android:gravity="center"/>
                <TextView android:text="18h00-23h00" android:textColor="@color/white"
                    android:background="@color/black" android:padding="8dp" android:gravity="center"/>
            </TableRow>

            <TableRow>
                <TextView android:text="Lundi" android:textColor="@color/white" android:background="@color/black"
                    android:padding="8dp" android:gravity="center"/>
                <TextView android:text="15" android:background="#FFFFFF" android:padding="8dp"
                    android:gravity="center"/>
                <TextView android:text="20" android:background="#FFFFFF" android:padding="8dp"
                    android:gravity="center"/>
                <TextView android:text="25" android:background="#FFFFFF" android:padding="8dp"
                    android:gravity="center"/>
                <TextView android:text="30" android:background="#FFFFFF" android:padding="8dp"
                    android:gravity="center"/>
                <TextView android:text="10" android:background="#FFFFFF" android:padding="8dp"
                    android:gravity="center"/>
                <TextView android:text="15" android:background="#FFFFFF" android:padding="8dp"
                    android:gravity="center"/>
            </TableRow>

            <TableRow>
                <TextView android:text="Mardi" android:textColor="@color/white" android:background="@color/black"
                    android:padding="8dp" android:gravity="center"/>
                <TextView android:text="15" android:background="#FFFFFF" android:padding="8dp"
                    android:gravity="center"/>
                <TextView android:text="20" android:background="#FFFFFF" android:padding="8dp"
                    android:gravity="center"/>
                <TextView android:text="25" android:background="#FFFFFF" android:padding="8dp"
                    android:gravity="center"/>
                <TextView android:text="30" android:background="#FFFFFF" android:padding="8dp"
                    android:gravity="center"/>
                <TextView android:text="10" android:background="#FFFFFF" android:padding="8dp"
                    android:gravity="center"/>
                <TextView android:text="15" android:background="#FFFFFF" android:padding="8dp"
                    android:gravity="center"/>
            </TableRow>

            <TableRow>
                <TextView android:text="Mercredi" android:textColor="@color/white" android:background="@color/black"
                    android:padding="8dp" android:gravity="center"/>
                <TextView android:text="15" android:background="#FFFFFF" android:padding="8dp"
                    android:gravity="center"/>
                <TextView android:text="20" android:background="#FFFFFF" android:padding="8dp"
                    android:gravity="center"/>
                <TextView android:text="25" android:background="#FFFFFF" android:padding="8dp"
                    android:gravity="center"/>
                <TextView android:text="30" android:background="#FFFFFF" android:padding="8dp"
                    android:gravity="center"/>
                <TextView android:text="10" android:background="#FFFFFF" android:padding="8dp"
                    android:gravity="center"/>
                <TextView android:text="15" android:background="#FFFFFF" android:padding="8dp"
                    android:gravity="center"/>
            </TableRow>

            <TableRow>
                <TextView android:text="Jeudi" android:textColor="@color/white" android:background="@color/black"
                    android:padding="8dp" android:gravity="center"/>
                <TextView android:text="15" android:background="#FFFFFF" android:padding="8dp"
                    android:gravity="center"/>
                <TextView android:text="20" android:background="#FFFFFF" android:padding="8dp"
                    android:gravity="center"/>
                <TextView android:text="25" android:background="#FFFFFF" android:padding="8dp"
                    android:gravity="center"/>
                <TextView android:text="30" android:background="#FFFFFF" android:padding="8dp"
                    android:gravity="center"/>
                <TextView android:text="10" android:background="#FFFFFF" android:padding="8dp"
                    android:gravity="center"/>
                <TextView android:text="15" android:background="#FFFFFF" android:padding="8dp"
                    android:gravity="center"/>
            </TableRow>

            <TableRow>
                <TextView android:text="Vendredi" android:textColor="@color/white" android:background="@color/black"
                    android:padding="8dp" android:gravity="center"/>
                <TextView android:text="15" android:background="#FFFFFF" android:padding="8dp"
                    android:gravity="center"/>

                <TextView android:text="20" android:background="#FFFFFF" android:padding="8dp"
                    android:gravity="center"/>
                <TextView android:text="25" android:background="#FFFFFF" android:padding="8dp"
                    android:gravity="center"/>
                <TextView android:text="30" android:background="#FFFFFF" android:padding="8dp"
                    android:gravity="center"/>
                <TextView android:text="10" android:background="#FFFFFF" android:padding="8dp"
                    android:gravity="center"/>
                <TextView android:text="15" android:background="#FFFFFF" android:padding="8dp"
                    android:gravity="center"/>
            </TableRow>

            <TableRow>
                <TextView android:text="Samedi" android:textColor="@color/white" android:background="@color/black"
                    android:padding="8dp" android:gravity="center"/>
                <TextView android:text="15" android:background="#FFFFFF" android:padding="8dp"
                    android:gravity="center"/>
                <TextView android:text="20" android:background="#FFFFFF" android:padding="8dp"
                    android:gravity="center"/>
                <TextView android:text="25" android:background="#FFFFFF" android:padding="8dp"
                    android:gravity="center"/>
                <TextView android:text="30" android:background="#FFFFFF" android:padding="8dp"
                    android:gravity="center"/>
                <TextView android:text="10" android:background="#FFFFFF" android:padding="8dp"
                    android:gravity="center"/>
                <TextView android:text="15" android:background="#FFFFFF" android:padding="8dp"
                    android:gravity="center"/>
            </TableRow>

            <TableRow>
                <TextView android:text="Dimanche" android:textColor="@color/white"
                    android:background="@color/black" android:padding="8dp" android:gravity="center"/>
                <TextView android:text="0" android:background="#FFFFFF" android:padding="8dp"
                    android:gravity="center"/>
                <TextView android:text="20" android:background="#FFFFFF" android:padding="8dp"
                    android:gravity="center"/>
                <TextView android:text="25" android:background="#FFFFFF" android:padding="8dp"
                    android:gravity="center"/>
                <TextView android:text="30" android:background="#FFFFFF" android:padding="8dp"
                    android:gravity="center"/>
                <TextView android:text="10" android:background="#FFFFFF" android:padding="8dp"
                    android:gravity="center"/>
                <TextView android:text="15" android:background="#FFFFFF" android:padding="8dp"
                    android:gravity="center"/>
            </TableRow>

        </TableLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tvFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Données mises à jour toutes les heures."
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>
</LinearLayout>